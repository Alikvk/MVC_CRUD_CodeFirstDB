
@using MVC_Template.Models
@{
    ViewBag.Title = "Product";
}

@model List<Product>

<div class="row">
    <div class="col-lg-12  col-md-12 col-sm-12 col-xs-12">
        <div class="block">
            <div class="block-heading">
                <div class="block-controls">

                    <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Product/AddProduct" class="btn btn-success rounded">Ürün Ekle</a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>

                                    <th>Ürün Adı</th>
                                    <th>Fiyat</th>
                                    <th>Miktar</th>
                                    <th>Stok</th>
                                    <th>Yeniden sipariş edilen ürün</th>
                                    <th>Yeniden sipariş edilen miktarı</th>
                                    <th>Kategoriler</th>
                                    <th>Tedarikçi</th>
                                    <th>Status</th>
                                    <th>İşlemler</th>
                                    <th>Sil</th>
                                    <th>Sil</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Product prd in Model)
                                {
                                    <tr>
                                        <td>@prd.ProductName</td>
                                        <td>@prd.UnitPrice</td>
                                        <td>@prd.QuantityPerUnit</td>
                                        <td>@prd.UnitsInStock</td>
                                        <td>@prd.UnitsOnOrder</td>
                                        <td>@prd.ReorderLevel</td>
                                        <td style="background-color:aquamarine;">
                                            @if (prd.Category?.CategoryName == null)
                                            {
                                            }
                                            else

                                            {
                                                <span class="label label-primary">
                                                    @prd.Category.CategoryName
                                                </span>
                                            }
                                        </td>
                                        <td style="background-color:indianred;">
                                            @if (prd.Supplier?.CompanyName == null)
                                            {

                                            }
                                            else
                                            {
                                                <span class="label label-primary ">
                                                    @prd.Supplier.CompanyName
                                                </span>
                                            }


                                        </td>


                                        <td>
                                            @if (prd.Discontinued == true)
                                            {
                                                <span class="icon icon-cross highlight-color-red-text"></span>}
                                            else

                                            {
                                                <span class="icon icon-check highlight-color-green-text"></span>}
                                        </td>
                                        <td>
                                            <a href="/Product/UpdateProduct/@prd.ProductID" type="submit" class="btn btn-primary rounded">Güncelle</a>
                                            <a href="/Product/DeleteProduct/@prd.ProductID" type="submit" class="btn btn-danger rounded">Sil</a>
                                        </td>
                                        <td><a href="/Product/DeleteConfirmed/@prd.ProductID" type="submit" class="btn btn-danger rounded">Onayla Sil</a></td>
                                        <td><a href="#" type="submit" onclick="DeleteData(@prd.ProductID,'Product')" class="btn btn-danger rounded deleted-item">Ajax İle Sil</a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

