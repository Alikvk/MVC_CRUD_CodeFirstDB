@using MVC_Template.Models
@{
    ViewBag.Title = "Category";
}


@model List<Category>


@section head
{
    <script>
        function CategoryClick(categoryID) {
            window.location.href = "/Category/UpdateCategory/" + categoryID;
        }
    </script>
    <style>
        td:hover {
            cursor: pointer;
        }
    </style>
}


<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Kategoriler<br />
                        <div class="main-text h3">
                            Üzerine Tıklayınca Güncelleme işlemi yapmaktadır.
                        </div>
                
                </div>
                
           
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Category/AddCategory" class="btn btn-success rounded" role="button">Kategori Ekle</a>
                </div>

            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Kategori Adı</th>
                                <th>Tanımı</th>
                                <th>Kategori Resim</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category ktg in Model)
                            {
                                <tr>
                                    <td onclick="CategoryClick(@ktg.CategoryID)">@ktg.CategoryName</td>
                                    <td onclick="CategoryClick(@ktg.CategoryID)">@ktg.Description</td>

                                    <td onclick="CategoryClick(@ktg.CategoryID)"><img src="@String.Format("data:image/jpg;base64,{0}", ktg.Base64String)" alt=" Kategori Resim" width="100" height="100" /></td>
                                   <!-- Bu rada javascript işlemini ürün sayfasındaki methodla güncelleme işlemi yaptığımız için kullanmıyoruz -->
                                     <td ><a href="/Category/UpdateCategory/@ktg.CategoryID" class="btn btn-primary rounded">Güncelle</a></td>
                                    <td onclick="CategoryClick(@ktg.CategoryID)"><a href="/Category/DeleteCategory/@ktg.CategoryID" class="btn btn-danger rounded">Sil</a></td>
                                    <td ><a href="#" onclick="DeleteData(@ktg.CategoryID,'Category')" class="btn btn-danger rounded">Ajax İle Sil</a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

