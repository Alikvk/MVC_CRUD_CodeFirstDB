@using MVC_Template.Models
@{
    ViewBag.Title = "Update Supplier";
}
@model Supplier
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="block">
        <div class="block-heading">
            <div class="main-text h2">
                Tedarikçi Eklerme
            </div>

            <div class="block-controls">
                <div class="active-buttons">

                </div>
                <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
            </div>
        </div>
        <div class="block-content-outer">
            <div class="block-content-inner">
                <form role="form" action="/Supplier/UpdateSupplier" method="post">
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="CompanyName" value="@Model.SupplierID" name="SupplierID">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Şirket Adı</label>
                        <input type="text" class="form-control" id="CompanyName" value="@Model.CompanyName" name="CompanyName">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">İlgili Kişi</label>
                        <input type="text" class="form-control" id="ContactName" value="@Model.ContactName" name="ContactName">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Bağlantı Başlığı</label>
                        <input type="text" class="form-control" id="ContactTitle" value="@Model.ContactTitle" name="ContactTitle">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Adres</label>
                        <input type="text" class="form-control" id="Address" value="@Model.Address" name="Address">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Şehir</label>
                        <input type="text" class="form-control" id="City" value="@Model.City" name="City">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Bölge</label>
                        <input type="text" class="form-control" id="Region" value="@Model.Region" name="Region">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Posta Kodu</label>
                        <input type="text" class="form-control" id="PostalCode" value="@Model.PostalCode" name="PostalCode">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ülke</label>
                        <input type="text" class="form-control" id="Country" value="@Model.Country" name="Country">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Telefon</label>
                        <input type="text" class="form-control" id="Phone" value="@Model.Phone" name="Phone">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Fax</label>
                        <input type="text" class="form-control" id="Fax" value="@Model.Fax" name="Fax">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ana Sayfa</label>
                        <input type="text" class="form-control" id="Fax" value="@Model.HomePage" name="HomePage">
                    </div>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

